<%- include("header") -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">

        <%newListItems.forEach(function(newListItem){%>
            <form class="" action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="delItem" value="<%= newListItem._id %>" onchange="this.form.submit()">
                    <p>
                        <%= newListItem.name %>
                    </p>
                </div>
            </form>

            <%})%>

        <form class="item" action="/" method="post">
            <input type="text" name="item" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>

    <%- include("footer") -%>